{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
